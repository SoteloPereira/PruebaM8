pipeline {
  agent any

  stages {
    stage('Clone Repository') {
      steps {
        git 'https://github.com/SoteloPereira/PruebaM8.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        script {
          sh 'npm install'
        }
      }
    }

    stage('Run Tests') {
      steps {
        script {
          sh 'npm test'
        }
      }
    }

    stage('Start Server üñ•Ô∏è') {
      steps {
        script {
          sh 'node server.js'
        }
      }
    }
  }

  post {
    always {
      echo 'Pipeline completo'
    }
    success {
      echo 'Las pruebas pasaron'
    }
    failure {
      echo 'Las pruebas fallaron'
    }
  }
}
